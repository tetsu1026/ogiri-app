<li class="comments_list">
  <p><%= comment.message %></p>
<%if user_signed_in? %>
  <% if Like.find_by(user_id: current_user.id, post_id: @post.id, comment_id: comment.id) %>
    <%= button_to 'いいねを取り消す', post_comment_like_path(@post.id, comment.id), method: :delete %>
  <% else %>
    <%= button_to 'いいね', post_comment_likes_path(@post.id, comment.id) %>
  <% end %>
<% end %>
  <%= comment.likes.count %>
</li>